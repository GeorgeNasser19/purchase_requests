<odoo>
    <data>
        <record id="view_purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.requests</field>
            <field name="arch" type="xml">
                <list>
                    <field name="request_name" widget="text" readonly="state in ('approve','reject','cancel')"/>
                    <field name="request_by" readonly="state in ('approve','reject','cancel')"/>
                    <field name="start_date" widget="date" class="d-block"
                           readonly="state in ('approve','reject','cancel')"/>
                    <field name="end_date" widget="date" class="d-block"
                           readonly="state in ('approve','reject','cancel')"/>
                    <field name="total_price" readonly="state in ('approve','reject','cancel')"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'approve'"
                           decoration-info="state == 'to be approved'"
                           decoration-danger="state == 'reject'"
                           decoration-muted="state == 'cancel'"
                    />
                </list>
            </field>
        </record>
        <record id="view_purchase_request_form" model="ir.ui.view">
            <field name="model">purchase.requests</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_submit" type="object" string="Submit for Approval" class="btn-primary"
                                invisible="state != 'draft'"
                        />
                        <button name="action_reject" type="object" string="Reject" class="btn-danger"
                                invisible="state != 'to be approved'"
                        />
                        <button name="action_approve" type="object" string="Approve" class="btn-primary"
                                invisible="state != 'to be approved'"
                        />
                        <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"
                                invisible="state != 'draft'"
                        />
                        <button name="action_reset" type="object" string="Reset" class="btn-secondary"
                                invisible="state not in ('cancel', 'to be approved')"
                        />
                        <field name="state" widget="statusbar"
                               statusbar_visible="to be approved,approve,reject,cancel"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Reject"
                                invisible="state != 'reject'" bg_color="text-bg-danger"/>
                        <widget name="web_ribbon" title="Approve"
                                invisible="state != 'approve'"/>
                        <div class="oe_title">
                            <lable for="request_name"/>
                            <h1 style="font-size: 2.5rem; font-weight: bold;">
                                <field name="request_name" placeholder="Request Name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="request_by" readonly="state in ('approve','reject','cancel')"/>
                            <field name="start_date" widget="date" readonly="state in ('approve','reject','cancel')"/>
                            <field name="end_date" widget="date" readonly="state in ('approve','reject','cancel')"/>
                            <field name="rejection_reason" widget="text" invisible="state != 'reject'"
                                   readonly="state in ('approve','reject','cancel')"/>
                        </group>
                        <notebook>
                            <page string="order lines">
                                <field name="order_line" context="{'default_request_id': id}"
                                       readonly="state in ('approve','reject','cancel')">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="description"/>
                                        <field name="cost_price"/>
                                        <field name="total"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="total_price" readonly="state in ('approve','reject','cancel')"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>
